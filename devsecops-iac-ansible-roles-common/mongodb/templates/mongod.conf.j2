systemLog:
  destination: file
  path: {{ mongodb_log_path }}
  logAppend: true

storage:
  dbPath: {{ mongodb_storage_path }}
  journal:
    enabled: true

processManagement:
  fork: true
  timeZoneInfo: /usr/share/zoneinfo
  pidFilePath: /var/run/mongodb/mongod.pid

net:
  bindIp: 127.0.0.1,{{ ansible_host }}
  port: 27017

replication:
  replSetName: "{{ mongodb_repl_name }}"

